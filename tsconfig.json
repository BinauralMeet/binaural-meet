{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "isolatedModules": true,
    "paths": {  // Only for vscode. see config-override.js
      "@models/*": [ "models/*" ],
      "@components/*": [ "components/*"],
      "@stores/*": [ "stores/*"],
      "@hooks/*": ["hooks/*"],
      "@libs/*": ["../../libs/*"],
    }
  },
  "include": [
    "src",
    "libs/lib-jitsi-meet"
  ]
}
